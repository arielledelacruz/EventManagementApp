<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_green_dark">

    <TextView
        android:id="@+id/tv_event_id_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Event ID"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_event_name_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_event_name_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Event Name"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_category_id_header"
        app:layout_constraintStart_toEndOf="@+id/tv_event_id_header"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_category_id_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Category ID"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_tickets_available_header"
        app:layout_constraintStart_toEndOf="@+id/tv_event_name_header"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tickets_available_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Tickets Available"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_is_active_header"
        app:layout_constraintStart_toEndOf="@+id/tv_category_id_header"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_is_active_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Active"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_tickets_available_header"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
